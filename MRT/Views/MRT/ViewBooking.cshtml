@model MRT.Controllers.MRTController.BookingViewModel

@{
    ViewData["Title"] = "View Booking";
}

<h3 class="mb-2">MRT Ticketing System</h3>

<nav class="navbar navbar-expand-lg navbar-light mb-3" style="background-color: #e3f2fd;">
    <div class="container-fluid">
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <a class="nav-link" aria-current="page" asp-action="Home" asp-route-userId="@Model.User.UserId">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-action="Profile" asp-route-userId="@Model.User.UserId">Profile</a>
                </li>
                @if (Model.User.IsAdmin)
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-action="ManageUsers" asp-route-userId="@Model.User.UserId">Manage Users</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-action="ManageBookings" asp-route-userId="@Model.User.UserId">Manage Bookings</a>
                    </li>
                }
            </ul>
            <a class="text-danger my-2 my-sm-0" asp-action="Index">Log out</a>
        </div>
    </div>
</nav>

<h5>View Booking Details</h5>

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.ErrorMessage
    </div>
}
@if (ViewBag.SuccessMessage != null)
{
    <div class="alert alert-success" role="alert">
        @ViewBag.SuccessMessage
    </div>
}

<div class="row mb-3">
    <div class="col-md-6">
        <label class="form-label">Booking Id</label>
        <input value="@Html.DisplayFor(x => x.Booking.BookingId)" type="text" class="form-control" readonly>
    </div>
    <div class="col-md-6">
        <label class="form-label">Ticket Type</label>
        <input value="@(Model.Booking.IsOneWay ? "One Way" : "Returning")" type="text" class="form-control" readonly>
    </div>
</div>
<div class="row mb-3">
    <div class="col-md-6">
        <label class="form-label">Station From</label>
        <input value="@Html.DisplayFor(x => x.Booking.StationFrom)" type="text" class="form-control" readonly>
    </div>
    <div class="col-md-6">
        <label class="form-label">Station To</label>
        <input value="@Html.DisplayFor(x => x.Booking.StationTo)" type="text" class="form-control" readonly>
    </div>
</div>
<div class="row mb-3">
    <div class="col-md-6">
        <label class="form-label">Single Ticket Price (RM)</label>
        <input value="@Html.DisplayFor(x => x.Booking.ListPrice)" type="number" class="form-control" readonly>
    </div>
    <div class="col-md-6">
        <label class="form-label">Quantity</label>
        <input value="@Html.DisplayFor(x => x.Booking.Quantity)" type="number" class="form-control" readonly>
    </div>
</div>

<div class="row mb-3">
    <div class="col-md-6">
        <label class="form-label">Discount (%)</label>
        <input value="@Html.DisplayFor(x => x.Booking.DiscountPercentage)" type="number" class="form-control" readonly>
    </div>
    <div class="col-md-6">
        <label class="form-label">Total Price (RM)</label>
        <input value="@Html.DisplayFor(x => x.Booking.TotalPrice)" type="number" class="form-control" readonly>
    </div>
</div>

<div class="row mb-3">
    <div class="col-md-6">
        <label class="form-label">Transaction Date</label>
        <input value="@Html.DisplayFor(x => x.Booking.CreatedAt)" type="text" class="form-control" readonly>
    </div>
</div>